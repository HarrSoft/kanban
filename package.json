{
  "name": "harrsoft-kanban",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test:unit": "vitest",
    "test": "bun run test:unit -- --run && bun run test:e2e",
    "test:e2e": "playwright test",
    "db:push": "tsx --tsconfig tsconfig.json node_modules/drizzle-kit/bin.cjs push",
    "db:generate": "tsx --tsconfig tsconfig.json node_modules/drizzle-kit/bin.cjs generate",
    "db:migrate": "tsx --tsconfig tsconfig.json node_modules/drizzle-kit/bin.cjs migrate",
    "db:studio": "tsx --tsconfig tsconfig.json node_modules/drizzle-kit/bin.cjs studio",
    "db:seed": "dotenv -e .env -- tsx --tsconfig tsconfig.json src/lib/server/db/seed.ts"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.1",
    "@sveltejs/adapter-auto": "^6.1.0",
    "@sveltejs/kit": "^2.43.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.18",
    "@tailwindcss/vite": "^4.1.13",
    "@types/bun": "^1.3.0",
    "@types/node": "^22",
    "@vitest/browser": "^3.2.4",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.12.4",
    "globals": "^16.4.0",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "svelte": "^5.39.5",
    "svelte-check": "^4.3.2",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.21.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "vitest-browser-svelte": "^1.1.0"
  },
  "dependencies": {
    "@oslojs/crypto": "^1.0.1",
    "@paralleldrive/cuid2": "^3.1.0",
    "date-fns": "^4.1.0",
    "drizzle-seed": "^0.3.1",
    "postgres": "^3.4.7",
    "quill": "^2.0.3",
    "svelte-dnd-action": "^0.9.68",
    "zod": "^4.1.12"
  }
}