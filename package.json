    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "svelte": "^5.46.1",
    "svelte-check": "^4.3.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vite": "^7.3.0",
    "vitest": "^3.2.4",
    "vitest-browser-svelte": "^1.1.0"
  },
  "dependencies": {
    "@oslojs/crypto": "^1.0.1",
    "@paralleldrive/cuid2": "^3.1.0",
